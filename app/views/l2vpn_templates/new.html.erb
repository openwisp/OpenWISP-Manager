<div id="new_l2vpn_template_div">
  <fieldset>
    <legend><%=t :Add_l2vpn_template %></legend>
    <% remote_form_for([@wisp, @access_point_template, @l2vpn_template],
            :update => { :success => "new_l2vpn_template_div", :failure => "new_l2vpn_template_div" }
      ) do |f| %>
      <p><%= f.error_messages %></p>
      <p>
        <%= f.label t(:L2vpn_server) %><br />
        <%= f.select(:l2vpn_server_id, @servers_select) %>
      </p>
      
      <p>
        <%= f.label t(:Notes) %><br />
        <%= f.text_area :notes, :rows => 3 %>
      </p>
      
      <p>
        <%= f.submit t(:Create) %>
      </p>
    <% end %>
  </fieldset>
</div>